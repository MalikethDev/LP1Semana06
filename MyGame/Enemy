using System;

namespace MyGame
{
    public class Enemy
    {
        private string name;
        private float health;
        private float shield;

        // Constructor
        public Enemy(string name)
        {
            this.name = name;
            health = 100;
            shield = 0;
        }

        // Set enemy name with a 8 character limit
        public void SetName(string name)
        {
            if (name.Length > 8)
            {
                Console.WriteLine("Name cannot exceed 8 characters.");
                return;
            }
            name = newName;
        }

        // Get enemy name
        public string GetName()
        {
            return name;
        }

        // Deal damage to the enemy
        public void TakeDamage(float damage)
        {
            if (shield >= damage)
            {
                shield -= damage; // Absorb damage with shield
            }
    
            else
            {
                float damageStillToInflict = -shield; // Calculate damage that will go through shield
                shield = 0; // Set shield to 0 after damage is applied
                health -= damageStillToInflict; // Apply remaining damage to health
               
                if (health < 0)
                {
                    health = 0; // Ensure health doesn't go below 0
                }
            }

            // Get Health and Shield Method
            public float GetHealth()
            {
                return health;
            }

            public float GetShield()
            {
                return shield;
            }
        }
    }
}